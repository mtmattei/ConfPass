<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="NeumorphicBg">#E0E5EC</Color>
            <Color x:Key="NeumorphicShadowDark">#A3B1C6</Color>
            <Color x:Key="NeumorphicShadowLight">#FFFFFF</Color>
            <Color x:Key="NeumorphicShadowDarkDeep">#7A8A9E</Color>
            <Color x:Key="NeumorphicTextPrimary">#2D3748</Color>
            <Color x:Key="NeumorphicTextSecondary">#5A6578</Color>
            <Color x:Key="NeumorphicTextMuted">#8A95A5</Color>
            <Color x:Key="NeumorphicAccent">#4A5568</Color>
            <Color x:Key="NeumorphicQrDark">#1A202C</Color>
            <Color x:Key="NeumorphicDivider">#8A95A5</Color>

            <SolidColorBrush x:Key="NeumorphicBgBrush" Color="{ThemeResource NeumorphicBg}" />
            <SolidColorBrush x:Key="NeumorphicTextPrimaryBrush" Color="{ThemeResource NeumorphicTextPrimary}" />
            <SolidColorBrush x:Key="NeumorphicTextSecondaryBrush" Color="{ThemeResource NeumorphicTextSecondary}" />
            <SolidColorBrush x:Key="NeumorphicTextMutedBrush" Color="{ThemeResource NeumorphicTextMuted}" />
            <SolidColorBrush x:Key="NeumorphicAccentBrush" Color="{ThemeResource NeumorphicAccent}" />
            <SolidColorBrush x:Key="NeumorphicQrDarkBrush" Color="{ThemeResource NeumorphicQrDark}" />
            <SolidColorBrush x:Key="NeumorphicDividerBrush" Color="{ThemeResource NeumorphicDivider}" />

            <utu:ShadowCollection x:Key="NeuroFloatingXl">
                <utu:Shadow OffsetX="8" OffsetY="8" BlurRadius="20" Spread="0" Opacity="0.35" Color="#A3B1C6" />
                <utu:Shadow OffsetX="-8" OffsetY="-8" BlurRadius="24" Spread="0" Opacity="0.6" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedXl">
                <utu:Shadow IsInner="True" OffsetX="-3" OffsetY="-3" BlurRadius="4" Spread="0" Opacity="0.4" Color="#A3B1C6" />
                <utu:Shadow IsInner="True" OffsetX="3" OffsetY="3" BlurRadius="6" Spread="0" Opacity="0.7" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedLg">
                <utu:Shadow IsInner="True" OffsetX="-2" OffsetY="-2" BlurRadius="3" Spread="0" Opacity="0.4" Color="#A3B1C6" />
                <utu:Shadow IsInner="True" OffsetX="2" OffsetY="2" BlurRadius="5" Spread="0" Opacity="0.7" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedMd">
                <utu:Shadow IsInner="True" OffsetX="-2" OffsetY="-2" BlurRadius="2" Spread="0" Opacity="0.4" Color="#A3B1C6" />
                <utu:Shadow IsInner="True" OffsetX="2" OffsetY="2" BlurRadius="3" Spread="0" Opacity="0.7" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedSm">
                <utu:Shadow IsInner="True" OffsetX="-1" OffsetY="-1" BlurRadius="1" Spread="0" Opacity="0.4" Color="#A3B1C6" />
                <utu:Shadow IsInner="True" OffsetX="1" OffsetY="1" BlurRadius="2" Spread="0" Opacity="0.7" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedXs">
                <utu:Shadow IsInner="True" OffsetX="-3" OffsetY="-3" BlurRadius="6" Spread="0" Opacity="0.4" Color="#A3B1C6" />
                <utu:Shadow IsInner="True" OffsetX="3" OffsetY="3" BlurRadius="9" Spread="0" Opacity="0.7" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroInsetMd">
                <utu:Shadow OffsetX="4" OffsetY="4" BlurRadius="6" Opacity="0.95" IsInner="True" Color="#7A8A9E" />
                <utu:Shadow OffsetX="-4" OffsetY="-4" BlurRadius="6" Opacity="1.0" IsInner="True" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroInsetSm">
                <utu:Shadow OffsetX="3" OffsetY="3" BlurRadius="6" Opacity="0.7" IsInner="True" Color="#8A9BB3" />
                <utu:Shadow OffsetX="-3" OffsetY="-3" BlurRadius="6" Opacity="0.8" IsInner="True" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroInsetXs">
                <utu:Shadow OffsetX="2" OffsetY="2" BlurRadius="4" Opacity="0.6" IsInner="True" Color="#8A9BB3" />
                <utu:Shadow OffsetX="-2" OffsetY="-2" BlurRadius="4" Opacity="0.7" IsInner="True" Color="#FFFFFF" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroLanyardInset">
                <utu:Shadow OffsetX="3" OffsetY="3" BlurRadius="6" Opacity="0.8" IsInner="True" Color="#8A9BB3" />
                <utu:Shadow OffsetX="-3" OffsetY="-3" BlurRadius="6" Opacity="0.9" IsInner="True" Color="#FFFFFF" />
            </utu:ShadowCollection>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <Color x:Key="NeumorphicBg">#2D3748</Color>
            <Color x:Key="NeumorphicShadowDark">#1A202C</Color>
            <Color x:Key="NeumorphicShadowLight">#4A5568</Color>
            <Color x:Key="NeumorphicShadowDarkDeep">#0D1117</Color>
            <Color x:Key="NeumorphicTextPrimary">#E2E8F0</Color>
            <Color x:Key="NeumorphicTextSecondary">#A0AEC0</Color>
            <Color x:Key="NeumorphicTextMuted">#718096</Color>
            <Color x:Key="NeumorphicAccent">#A0AEC0</Color>
            <Color x:Key="NeumorphicQrDark">#E2E8F0</Color>
            <Color x:Key="NeumorphicDivider">#4A5568</Color>

            <SolidColorBrush x:Key="NeumorphicBgBrush" Color="{ThemeResource NeumorphicBg}" />
            <SolidColorBrush x:Key="NeumorphicTextPrimaryBrush" Color="{ThemeResource NeumorphicTextPrimary}" />
            <SolidColorBrush x:Key="NeumorphicTextSecondaryBrush" Color="{ThemeResource NeumorphicTextSecondary}" />
            <SolidColorBrush x:Key="NeumorphicTextMutedBrush" Color="{ThemeResource NeumorphicTextMuted}" />
            <SolidColorBrush x:Key="NeumorphicAccentBrush" Color="{ThemeResource NeumorphicAccent}" />
            <SolidColorBrush x:Key="NeumorphicQrDarkBrush" Color="{ThemeResource NeumorphicQrDark}" />
            <SolidColorBrush x:Key="NeumorphicDividerBrush" Color="{ThemeResource NeumorphicDivider}" />

            <utu:ShadowCollection x:Key="NeuroFloatingXl">
                <utu:Shadow OffsetX="8" OffsetY="8" BlurRadius="20" Spread="0" Opacity="0.5" Color="#1A202C" />
                <utu:Shadow OffsetX="-8" OffsetY="-8" BlurRadius="24" Spread="0" Opacity="0.25" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedXl">
                <utu:Shadow IsInner="True" OffsetX="-3" OffsetY="-3" BlurRadius="4" Spread="0" Opacity="0.5" Color="#1A202C" />
                <utu:Shadow IsInner="True" OffsetX="3" OffsetY="3" BlurRadius="6" Spread="0" Opacity="0.3" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedLg">
                <utu:Shadow IsInner="True" OffsetX="-2" OffsetY="-2" BlurRadius="3" Spread="0" Opacity="0.5" Color="#1A202C" />
                <utu:Shadow IsInner="True" OffsetX="2" OffsetY="2" BlurRadius="5" Spread="0" Opacity="0.3" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedMd">
                <utu:Shadow IsInner="True" OffsetX="-2" OffsetY="-2" BlurRadius="2" Spread="0" Opacity="0.5" Color="#1A202C" />
                <utu:Shadow IsInner="True" OffsetX="2" OffsetY="2" BlurRadius="3" Spread="0" Opacity="0.3" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedSm">
                <utu:Shadow IsInner="True" OffsetX="-1" OffsetY="-1" BlurRadius="1" Spread="0" Opacity="0.5" Color="#1A202C" />
                <utu:Shadow IsInner="True" OffsetX="1" OffsetY="1" BlurRadius="2" Spread="0" Opacity="0.3" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroRaisedXs">
                <utu:Shadow IsInner="True" OffsetX="-3" OffsetY="-3" BlurRadius="6" Spread="0" Opacity="0.5" Color="#1A202C" />
                <utu:Shadow IsInner="True" OffsetX="3" OffsetY="3" BlurRadius="9" Spread="0" Opacity="0.3" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroInsetMd">
                <utu:Shadow OffsetX="4" OffsetY="4" BlurRadius="6" Opacity="0.8" IsInner="True" Color="#0D1117" />
                <utu:Shadow OffsetX="-4" OffsetY="-4" BlurRadius="6" Opacity="0.4" IsInner="True" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroInsetSm">
                <utu:Shadow OffsetX="3" OffsetY="3" BlurRadius="6" Opacity="0.7" IsInner="True" Color="#0D1117" />
                <utu:Shadow OffsetX="-3" OffsetY="-3" BlurRadius="6" Opacity="0.35" IsInner="True" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroInsetXs">
                <utu:Shadow OffsetX="2" OffsetY="2" BlurRadius="4" Opacity="0.6" IsInner="True" Color="#0D1117" />
                <utu:Shadow OffsetX="-2" OffsetY="-2" BlurRadius="4" Opacity="0.35" IsInner="True" Color="#4A5568" />
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="NeuroLanyardInset">
                <utu:Shadow OffsetX="3" OffsetY="3" BlurRadius="6" Opacity="0.7" IsInner="True" Color="#0D1117" />
                <utu:Shadow OffsetX="-3" OffsetY="-3" BlurRadius="6" Opacity="0.4" IsInner="True" Color="#4A5568" />
            </utu:ShadowCollection>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <Color x:Key="NeumorphicActiveGreen">#6BCB77</Color>
    <Color x:Key="NeumorphicSuccess">#48BB78</Color>
    <Color x:Key="NeumorphicWarning">#ECC94B</Color>
    <Color x:Key="NeumorphicInfo">#4299E1</Color>

    <SolidColorBrush x:Key="NeumorphicActiveGreenBrush" Color="{StaticResource NeumorphicActiveGreen}" />
    <SolidColorBrush x:Key="NeumorphicSuccessBrush" Color="{StaticResource NeumorphicSuccess}" />
    <SolidColorBrush x:Key="NeumorphicWarningBrush" Color="{StaticResource NeumorphicWarning}" />
    <SolidColorBrush x:Key="NeumorphicInfoBrush" Color="{StaticResource NeumorphicInfo}" />

    <CornerRadius x:Key="RadiusSm">12</CornerRadius>
    <CornerRadius x:Key="RadiusMd">16</CornerRadius>
    <CornerRadius x:Key="RadiusLg">20</CornerRadius>
    <CornerRadius x:Key="RadiusXl">24</CornerRadius>
    <CornerRadius x:Key="RadiusPill">50</CornerRadius>

    <FontFamily x:Key="OutfitLight">ms-appx:///Assets/Fonts/Outfit/static/Outfit-Light.ttf#Outfit</FontFamily>
    <FontFamily x:Key="OutfitRegular">ms-appx:///Assets/Fonts/Outfit/static/Outfit-Regular.ttf#Outfit</FontFamily>
    <FontFamily x:Key="OutfitSemiBold">ms-appx:///Assets/Fonts/Outfit/static/Outfit-SemiBold.ttf#Outfit</FontFamily>
    <FontFamily x:Key="OutfitExtraBold">ms-appx:///Assets/Fonts/Outfit/static/Outfit-ExtraBold.ttf#Outfit</FontFamily>
    <FontFamily x:Key="OutfitBlack">ms-appx:///Assets/Fonts/Outfit/static/Outfit-Black.ttf#Outfit</FontFamily>

    <FontFamily x:Key="JetBrainsRegular">ms-appx:///Assets/Fonts/JetBrains_Mono/static/JetBrainsMono-Regular.ttf#JetBrains Mono</FontFamily>
    <FontFamily x:Key="JetBrainsMedium">ms-appx:///Assets/Fonts/JetBrains_Mono/static/JetBrainsMono-Medium.ttf#JetBrains Mono</FontFamily>

    <Style x:Key="DisplayTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitBlack}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="CharacterSpacing" Value="-20" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextPrimaryBrush}" />
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitRegular}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
    </Style>

    <Style x:Key="CompanyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitRegular}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="14.4" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextMutedBrush}" />
    </Style>

    <Style x:Key="BodySemiBoldTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitSemiBold}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextPrimaryBrush}" />
    </Style>

    <Style x:Key="BodySmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitLight}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
    </Style>

    <Style x:Key="MonoLabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMedium}" />
        <Setter Property="FontSize" Value="10.5" />
        <Setter Property="CharacterSpacing" Value="150" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
    </Style>

    <Style x:Key="MonoSmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsRegular}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="CharacterSpacing" Value="100" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextMutedBrush}" />
    </Style>

    <Style x:Key="InitialsTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitBlack}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="AccessBadgeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMedium}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="CharacterSpacing" Value="150" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
    </Style>

    <Style x:Key="DetailIconStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="BadgeIconStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
    </Style>

    <Style x:Key="SocialIconStyle" TargetType="Path">
        <Setter Property="Fill" Value="{ThemeResource NeumorphicTextSecondaryBrush}" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="SectionLabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMedium}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="CharacterSpacing" Value="100" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextMutedBrush}" />
    </Style>

    <Style x:Key="CardTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitSemiBold}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextPrimaryBrush}" />
    </Style>

    <Style x:Key="CardSubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitRegular}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextMutedBrush}" />
    </Style>

    <Style x:Key="ScheduleTimeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMedium}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="SchedulePeriodTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsRegular}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextMutedBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="LinkTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitRegular}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource NeumorphicInfoBrush}" />
    </Style>

    <Style x:Key="TagTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMedium}" />
        <Setter Property="FontSize" Value="8" />
        <Setter Property="CharacterSpacing" Value="50" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="LockedBadgeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource OutfitExtraBold}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{ThemeResource NeumorphicTextMutedBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
