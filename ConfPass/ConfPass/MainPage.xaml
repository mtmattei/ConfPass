<Page x:Class="ConfPass.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:vm="using:ConfPass.ViewModels"
      xmlns:controls="using:ConfPass.Controls"
      Background="{ThemeResource NeumorphicBgBrush}">

    <Page.Resources>
        <Storyboard x:Key="ActivePulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ActiveIndicator"
                                           Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1.0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.4">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1.0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Padding="{utu:Responsive Narrowest=16, Narrow=24, Normal=32, Wide=48, Widest=64}">

            <utu:ShadowContainer Shadows="{ThemeResource NeuroFloatingXl}">
                <utu:ShadowContainer Shadows="{ThemeResource NeuroRaisedXl}"
                                     Background="{ThemeResource NeumorphicBgBrush}"
                                     Padding="16">
                    <Border Width="{utu:Responsive Narrowest=300, Narrow=320, Normal=340, Wide=380, Widest=420}"
                            Padding="{utu:Responsive Narrowest=24, Narrow=32, Normal=40, Wide=48, Widest=56}"
                            CornerRadius="{StaticResource RadiusXl}">

                    <StackPanel Spacing="0">

                        <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                             Shadows="{ThemeResource NeuroInsetMd}"
                                             HorizontalAlignment="Left"
                                             Margin="0,0,0,19">
                            <Grid Padding="16,8" CornerRadius="{StaticResource RadiusPill}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse x:Name="ActiveIndicator"
                                             Width="8" Height="8"
                                             Fill="{StaticResource NeumorphicActiveGreenBrush}"
                                             VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Pass.EventName}"
                                               Style="{StaticResource MonoLabelTextStyle}" />
                                </StackPanel>
                            </Grid>
                        </utu:ShadowContainer>

                        <StackPanel Orientation="Horizontal"
                                    Spacing="{utu:Responsive Narrowest=12, Narrow=16, Normal=20, Wide=24, Widest=28}"
                                    Margin="0,0,0,12">
                            <Grid x:Name="AvatarRoot"
                                  PointerPressed="Avatar_PointerPressed"
                                  PointerReleased="Avatar_PointerReleased"
                                  AutomationProperties.Name="Attendee avatar">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="AvatarStates">
                                        <VisualState x:Name="AvatarNormal" />
                                        <VisualState x:Name="AvatarPressed">
                                            <VisualState.Setters>
                                                <Setter Target="AvatarRaised.Opacity" Value="0" />
                                                <Setter Target="AvatarInset.Opacity" Value="1" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <utu:ShadowContainer x:Name="AvatarRaised"
                                                     Background="{ThemeResource NeumorphicBgBrush}"
                                                     Shadows="{ThemeResource NeuroRaisedLg}"
                                                     Padding="8">
                                    <Grid Width="80" Height="80" CornerRadius="{StaticResource RadiusLg}">
                                        <TextBlock Text="{Binding Pass.Initials}"
                                                   Style="{StaticResource InitialsTextStyle}" />
                                    </Grid>
                                </utu:ShadowContainer>
                                <utu:ShadowContainer x:Name="AvatarInset"
                                                     Background="{ThemeResource NeumorphicBgBrush}"
                                                     Shadows="{ThemeResource NeuroInsetMd}"
                                                     Opacity="0">
                                    <Grid Width="80" Height="80"
                                          Margin="8"
                                          CornerRadius="{StaticResource RadiusLg}">
                                        <TextBlock Text="{Binding Pass.Initials}"
                                                   Style="{StaticResource InitialsTextStyle}" />
                                    </Grid>
                                </utu:ShadowContainer>
                            </Grid>
                            <StackPanel VerticalAlignment="Center" MaxWidth="{utu:Responsive Narrowest=140, Narrow=150, Normal=160, Wide=200, Widest=240}">
                                <TextBlock Text="{Binding Pass.FullName}"
                                           Style="{StaticResource DisplayTextStyle}"
                                           Margin="0,0,0,4" />
                                <TextBlock Style="{StaticResource BodyTextStyle}"
                                           TextWrapping="Wrap">
                                    <Run Text="{Binding Pass.Role}" />
                                    <Run Text=" " />
                                    <Run Text="&#x2022;" />
                                    <Run Text=" " />
                                    <Run Text="{Binding Pass.Title}" />
                                </TextBlock>
                                <TextBlock Text="{Binding Pass.CompanyName}"
                                           Style="{StaticResource CompanyTextStyle}"
                                           Margin="0,2,0,0" />
                            </StackPanel>
                        </StackPanel>

                        <ItemsRepeater ItemsSource="{Binding SocialLinks}"
                                       Margin="8,0,0,16"
                                       HorizontalAlignment="Left">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="10" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                                         Shadows="{ThemeResource NeuroRaisedMd}">
                                        <Grid Width="36" Height="36" CornerRadius="10">
                                            <Path Data="{Binding IconPath}"
                                                  Style="{StaticResource SocialIconStyle}" />
                                        </Grid>
                                    </utu:ShadowContainer>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                        <Border Height="1"
                                Background="{ThemeResource NeumorphicTextMutedBrush}"
                                Opacity="0.3"
                                Margin="0,0,0,16" />

                        <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                             Shadows="{ThemeResource NeuroInsetXs}"
                                             Margin="0,0,0,16">
                            <Grid Padding="12,12" CornerRadius="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Path x:Name="NetworkingIcon"
                                      Grid.Column="0"
                                      Data="M12,21L15.6,16.2C14.6,15.45 13.35,15 12,15C10.65,15 9.4,15.45 8.4,16.2L12,21M12,3C7.95,3 4.21,4.34 1.2,6.6L3,9C5.5,7.12 8.62,6 12,6C15.38,6 18.5,7.12 21,9L22.8,6.6C19.79,4.34 16.05,3 12,3M12,9C9.3,9 6.81,9.89 4.8,11.4L6.6,13.8C8.1,12.67 9.97,12 12,12C14.03,12 15.9,12.67 17.4,13.8L19.2,11.4C17.19,9.89 14.7,9 12,9Z"
                                      Fill="{StaticResource NeumorphicSuccessBrush}"
                                      Width="20" Height="20"
                                      Stretch="Uniform"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock x:Uid="MainPage_Networking_Title"
                                               Text="Open to Networking"
                                               Style="{StaticResource CardTitleTextStyle}" />
                                    <TextBlock x:Uid="MainPage_Networking_Subtitle"
                                               Text="Others can see you're available"
                                               Style="{StaticResource CardSubtitleTextStyle}" />
                                </StackPanel>
                                <controls:NeumorphicToggle Grid.Column="2"
                                                           VerticalAlignment="Center"
                                                           IsOn="{Binding IsNetworkingAvailable, Mode=TwoWay}"
                                                           Command="{Binding ToggleNetworkingCommand}"
                                                           AutomationProperties.Name="Networking toggle" />
                            </Grid>
                        </utu:ShadowContainer>

                        <Border Height="1"
                                Background="{ThemeResource NeumorphicTextMutedBrush}"
                                Opacity="0.3"
                                Margin="0,0,0,16" />

                        <StackPanel Margin="0,0,0,16">
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Uid="MainPage_Schedule_Label"
                                           Text="MY SCHEDULE"
                                           Style="{StaticResource SectionLabelTextStyle}" />
                                <TextBlock x:Uid="MainPage_Schedule_ViewAll"
                                           Grid.Column="1"
                                           Text="View All"
                                           Style="{StaticResource LinkTextStyle}" />
                            </Grid>
                            <ItemsRepeater ItemsSource="{Binding ScheduleItems}">
                                <ItemsRepeater.Layout>
                                    <StackLayout Spacing="8" />
                                </ItemsRepeater.Layout>
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate>
                                        <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                                             Shadows="{ThemeResource NeuroInsetXs}">
                                            <Grid Padding="12" CornerRadius="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="45" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Time}"
                                                               Style="{StaticResource ScheduleTimeTextStyle}" />
                                                    <TextBlock Text="{Binding Period}"
                                                               Style="{StaticResource SchedulePeriodTextStyle}" />
                                                </StackPanel>
                                                <Border Grid.Column="1"
                                                        Width="3" Height="40"
                                                        CornerRadius="2"
                                                        Background="{ThemeResource NeumorphicAccentBrush}"
                                                        Margin="8,0,12,0" />
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <Border Background="{StaticResource NeumorphicInfoBrush}"
                                                            CornerRadius="4"
                                                            Padding="6,2"
                                                            HorizontalAlignment="Left"
                                                            Margin="0,0,0,4"
                                                            Visibility="{Binding IsSpeaking}">
                                                        <TextBlock x:Uid="MainPage_Schedule_SpeakingTag"
                                                                   Text="SPEAKING"
                                                                   Style="{StaticResource TagTextStyle}" />
                                                    </Border>
                                                    <TextBlock Text="{Binding Title}"
                                                               Style="{StaticResource CardTitleTextStyle}"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxWidth="{utu:Responsive Narrowest=120, Narrow=135, Normal=150, Wide=190, Widest=230}" />
                                                    <TextBlock Style="{StaticResource CardSubtitleTextStyle}">
                                                        <Run Text="{Binding Room}" />
                                                        <Run Text=" Â· " />
                                                        <Run Text="{Binding Duration}" />
                                                    </TextBlock>
                                                </StackPanel>
                                                <Path Grid.Column="3"
                                                      Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                                                      Fill="{ThemeResource NeumorphicTextMutedBrush}"
                                                      Width="16" Height="16"
                                                      Stretch="Uniform"
                                                      VerticalAlignment="Center" />
                                            </Grid>
                                        </utu:ShadowContainer>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>

                        <Border Height="1"
                                Background="{ThemeResource NeumorphicTextMutedBrush}"
                                Opacity="0.3"
                                Margin="0,0,0,16" />

                        <StackPanel Spacing="2">
                            <controls:DetailItem x:Uid="MainPage_Detail_Venue"
                                                 Glyph="&#xE707;"
                                                 Label="VENUE"
                                                 Value="{Binding Pass.Venue}"
                                                 AutomationProperties.Name="Venue" />
                            <controls:DetailItem x:Uid="MainPage_Detail_Date"
                                                 Glyph="&#xE787;"
                                                 Label="DATE"
                                                 Value="{Binding Pass.Date}"
                                                 AutomationProperties.Name="Date" />
                            <controls:DetailItem x:Uid="MainPage_Detail_Session"
                                                 Glyph="&#xE8A5;"
                                                 Label="SESSION"
                                                 Value="{Binding Pass.Session}"
                                                 TextWrapping="Wrap"
                                                 MaxValueWidth="{utu:Responsive Narrowest=140, Narrow=160, Normal=180, Wide=220, Widest=260}"
                                                 AutomationProperties.Name="Session" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Spacing="20"
                                    Margin="0,26,0,0">
                            <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                                 Shadows="{ThemeResource NeuroInsetMd}">
                                <Grid Width="90" Height="90"
                                      Padding="15"
                                      CornerRadius="{StaticResource RadiusMd}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="0" Grid.Column="2" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="0" Grid.Column="4" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="0" Grid.Column="5" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="0" Grid.Column="6" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="1" Grid.Column="2" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="1" Grid.Column="3" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="1" Grid.Column="4" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="1" Grid.Column="6" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="2" Grid.Column="0" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="2" Grid.Column="2" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="2" Grid.Column="4" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="2" Grid.Column="6" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="3" Grid.Column="3" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="4" Grid.Column="0" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="4" Grid.Column="2" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="4" Grid.Column="4" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="4" Grid.Column="6" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="5" Grid.Column="0" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="5" Grid.Column="2" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="5" Grid.Column="3" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="5" Grid.Column="4" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="5" Grid.Column="6" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="6" Grid.Column="0" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="6" Grid.Column="1" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="6" Grid.Column="2" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="6" Grid.Column="4" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="6" Grid.Column="5" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                        <Border Grid.Row="6" Grid.Column="6" Background="{ThemeResource NeumorphicQrDarkBrush}" CornerRadius="1" Margin="1" />
                                    </Grid>
                                </Grid>
                            </utu:ShadowContainer>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Pass.ScanText}"
                                           Style="{StaticResource BodySmallTextStyle}"
                                           TextWrapping="Wrap"
                                           MaxWidth="{utu:Responsive Narrowest=110, Narrow=125, Normal=140, Wide=170, Widest=200}"
                                           Margin="0,0,0,4" />
                                <TextBlock Text="{Binding Pass.PassId}"
                                           Style="{StaticResource MonoSmallTextStyle}" />
                            </StackPanel>
                        </StackPanel>

                        <Grid x:Name="AccessBadgeRoot"
                              HorizontalAlignment="Center"
                              Margin="0,19,0,0"
                              AutomationProperties.Name="Access level badge">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RaisedShadow.Opacity" Value="0" />
                                            <Setter Target="InsetShadow.Opacity" Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RaisedShadow.Opacity" Value="0" />
                                            <Setter Target="InsetShadow.Opacity" Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <utu:ShadowContainer x:Name="RaisedShadow"
                                                 Background="{ThemeResource NeumorphicBgBrush}"
                                                 Shadows="{ThemeResource NeuroRaisedMd}"
                                                 Padding="4">
                                <Grid Padding="24,8" CornerRadius="10">
                                    <StackPanel Orientation="Horizontal" Spacing="10" Opacity="0">
                                        <FontIcon Glyph="&#xE8D7;"
                                                  Style="{StaticResource BadgeIconStyle}" />
                                        <TextBlock Text="{Binding Pass.AccessLevel}"
                                                   Style="{StaticResource AccessBadgeTextStyle}" />
                                    </StackPanel>
                                </Grid>
                            </utu:ShadowContainer>
                            <utu:ShadowContainer x:Name="InsetShadow"
                                                 Background="{ThemeResource NeumorphicBgBrush}"
                                                 Shadows="{ThemeResource NeuroInsetMd}"
                                                 Opacity="0">
                                <Grid Padding="24,8"
                                      Margin="4"
                                      CornerRadius="10">
                                    <StackPanel Orientation="Horizontal" Spacing="10" Opacity="0">
                                        <FontIcon Glyph="&#xE8D7;"
                                                  Style="{StaticResource BadgeIconStyle}" />
                                        <TextBlock Text="{Binding Pass.AccessLevel}"
                                                   Style="{StaticResource AccessBadgeTextStyle}" />
                                    </StackPanel>
                                </Grid>
                            </utu:ShadowContainer>
                            <Grid Padding="28,10"
                                  PointerEntered="AccessBadge_PointerEntered"
                                  PointerExited="AccessBadge_PointerExited"
                                  PointerPressed="AccessBadge_PointerPressed"
                                  PointerReleased="AccessBadge_PointerReleased"
                                  Background="Transparent">
                                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE8D7;"
                                              Style="{StaticResource BadgeIconStyle}"
                                              VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Pass.AccessLevel}"
                                               Style="{StaticResource AccessBadgeTextStyle}"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </Grid>

                        </StackPanel>
                    </Border>
                </utu:ShadowContainer>
            </utu:ShadowContainer>

            <Grid Width="40" Height="40"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Margin="0,-4,0,0"
                  RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TranslateTransform Y="-16" />
                </Grid.RenderTransform>
                <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                     Shadows="{ThemeResource NeuroLanyardInset}">
                    <Grid Width="40" Height="40" CornerRadius="20" />
                </utu:ShadowContainer>
                <utu:ShadowContainer Background="{ThemeResource NeumorphicBgBrush}"
                                     Shadows="{ThemeResource NeuroRaisedMd}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                    <Grid Width="24" Height="24" CornerRadius="12" />
                </utu:ShadowContainer>
            </Grid>

        </Grid>
    </ScrollViewer>
</Page>
