<UserControl x:Class="ConfPass.Controls.DetailItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:controls="using:ConfPass.Controls">

    <StackPanel Orientation="Horizontal" Spacing="16">
        <controls:NeumorphicIconButton>
            <controls:NeumorphicIconButton.IconContent>
                <FontIcon Glyph="{x:Bind Glyph, Mode=OneWay}"
                          Style="{StaticResource DetailIconStyle}" />
            </controls:NeumorphicIconButton.IconContent>
        </controls:NeumorphicIconButton>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="{x:Bind Label, Mode=OneWay}"
                       Style="{StaticResource MonoLabelTextStyle}"
                       Margin="0,0,0,2" />
            <TextBlock Text="{x:Bind Value, Mode=OneWay}"
                       Style="{StaticResource BodySemiBoldTextStyle}"
                       TextWrapping="{x:Bind TextWrapping, Mode=OneWay}"
                       MaxWidth="{x:Bind MaxValueWidth, Mode=OneWay}" />
        </StackPanel>
    </StackPanel>
</UserControl>
